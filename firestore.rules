rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user belongs to a specific club
    function isUserOfClub(clubId) {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clubId == clubId;
    }
    
    // Allow anyone to create a club, their user records, and settings.
    // This is needed for the sign-up process.
    match /clubs/{clubId} {
      allow create: if request.auth != null;

      // Only authenticated users belonging to the club can read/write its data.
      allow read, write: if isUserOfClub(clubId);

      match /{document=**} {
        allow read, write: if isUserOfClub(clubId);
      }
    }
    
    // Allow users to create their own user document mapping their auth UID to their clubId
    match /users/{userId} {
       allow create: if request.auth.uid == userId;
       // Only the authenticated user can read or update their own user document
       allow read, update: if request.auth.uid == userId;
    }
  }
}
