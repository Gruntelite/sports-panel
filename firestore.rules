rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get the user's document data
    function getUserData() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Helper function to check if the user belongs to a specific club
    function isMemberOfClub(clubId) {
      return isAuthenticated() && getUserData().clubId == clubId;
    }

    // Users can only read and write their own document.
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Rules for clubs and their subcollections
    match /clubs/{clubId} {
      // Allow read access to club data if the user is a member of that club
      allow read: if isMemberOfClub(clubId);
      
      // Anyone can create a club (sign-up process)
      allow create: if isAuthenticated();

      // Grant read and write access to all subcollections if the user is a member of the club.
      // This single rule covers teams, schedules, players, settings, etc.
      match /{collection}/{docId} {
        allow read, write: if isMemberOfClub(clubId);
      }
    }
  }
}
