rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow new club creation during signup
    match /clubs/{clubId} {
      allow create: if true;
      
      // Once created, only allow users of that club to access it.
      // This is checked by looking at the root `users` collection doc.
      allow read, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clubId == clubId;

      // Rules for subcollections
      match /{subcollection}/{docId} {
         allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clubId == clubId;
      }
    }

    // Allow users to be created during signup.
    // The root user doc links a user's auth UID to their club ID.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
